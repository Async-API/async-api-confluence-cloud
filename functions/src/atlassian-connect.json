{
  "key": "my-api",
  "name": "Async API",
  "description": "My very first app",
  "vendor": {
    "name": "P&D Vision",
    "url": "https://www.zenuml.com"
  },
  "baseUrl": "{{localBaseUrl}}",
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}/atlassian-connect.json"
  },
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed"
  },
  "scopes": [
    "READ",
    "WRITE"
  ],
  "modules": {
    "generalPages": [
      {
        "key": "my-api-viewer",
        "location": "",
        "name": {
          "value": "My API Doc"
        },
        "url": "/view?contentId={content.id}",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ]
      },
      {
        "key": "api-doc-list",
        "location": "",
        "name": {
          "value": "My API Documents"
        },
        "url": "/list?spaceKey={space.key}",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ]
      }
    ],
    "customContent": [
      {
        "key": "async-api-doc",
        "name": {
          "value": "My API Documents"
        },
        "uiSupport": {
          "contentViewComponent": {
            "moduleKey": "my-api-viewer"
          },
          "listViewComponent": {
            "moduleKey": "api-doc-list"
          },
          "icons": {
            "item": {
              "url": "/zenapi-logo.png"
            }
          }
        },
        "apiSupport": {
          "bodyType": "raw",
          "supportedContainerTypes": [
            "space"
          ],
          "indexing": {
            "enabled": true
          }
        }
      }
    ],
    "dialogs": [
      {
        "url": "/create?spaceKey={space.key}",
        "options": {
          "height": "100%",
          "width": "100%",
          "header": {
            "value": "Create a new API Document"
          }
        },
        "key": "newApiDoc"
      },
      {
        "url": "/edit?spaceKey={space.key}&contentId={content.id}",
        "options": {
          "height": "100%",
          "width": "100%",
          "header": {
            "value": "Create a new API Document"
          }
        },
        "key": "editApiDoc"
      }
    ]
  },
  "apiMigrations": {
    "gdpr": true,
    "signed-install": true
  }
}
